<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/news_item_title_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="this is title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_item_content_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_title_txv"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="this is content" />

        <TextView
            android:id="@+id/news_item_date_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_content_txv"
            android:layout_marginTop="10dp"
            android:text="2017-05-27" />

    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:id="@+id/news_item_top_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="3dp"
        android:text="置顶"
        android:textColor="@color/colorAccent" />

</android.support.v7.widget.CardView>